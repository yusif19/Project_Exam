@using Exam.Application.DTO
@using Exam.Application.Features.Commands.Student.CreateStudent
@model StudentDTO

<div class="form-container">
    <h2>Tələbə Yaratma</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Number" class="control-label"></label>
            <input asp-for="Number" class="form-control" type="number" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Class" class="control-label"></label>
            <input asp-for="Class" class="form-control" type="number" />
            <span asp-validation-for="Class" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn-submit">Yerləşdir</button>

        <a asp-action="Index" asp-controller="student" class="btn btn-secondary">Geri Qayıt</a>
    </form>
</div>
